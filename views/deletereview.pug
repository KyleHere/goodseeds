extends layout.pug
include utils.pug
block content
  div.delete-container
    h1 Are you sure you want to delete this review?
    div
      form(action=`/plants/reviews/delete/${review.id}` method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        div.delete-buttons
          button(type='submit' class='clickable-link') Delete review
          a(href=`/plants/${review.plantId}` role='button' class='clickable-link') Cancel
