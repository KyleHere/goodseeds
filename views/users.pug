extends layout.pug

include utils.pug

block content
    container(class="flex-container__center-x background-reset")
        table
            thead
                tr
                    th
                    th
            tbody
                each shelf in shelves
                    tr
                        td.flex-container__center-center
                            //- div= shelf.User.username
                            a(href=`./users/${shelf.User.id}/shelves` class="user-link") #{shelf.User.username}
                        td
                            div.flex-container__center-x
                                a(href=`./shelves/${shelf.id}` class="shelf-link") #{shelf.name}
