extends layout.pug

include utils.pug

block content
  container.plant-id__container
      div.plant-card
            img(src=`/images/plants/${plant.imgUrl}.jpeg`, alt="Picture goes here", class="plant-image")
            div
                a(class="plant-name" href=`/plants/${plant.id}`)= plant.name
            div
                p(class="plant-scientific-name")= plant.scientificName
      div.review-card
          form(action=`/plants/${plant.id}/reviews` method="post" class='center-form')
              input(type='hidden' name='_csrf' value=csrfToken)
              h1 Add Review
              div
                  h2(class='center-form') Rating
                  div
                    select(name='rating' required)
                        option(value='') -- select one --
                        option(value=1) ⭐
                        option(value=2) ⭐⭐
                        option(value=3) ⭐⭐⭐
                        option(value=4) ⭐⭐⭐⭐
                        option(value=5) ⭐⭐⭐⭐⭐
              div(class='form-group')
                label(for='reviewText' class="center-form")
                div
                  textarea(name='reviewText' rows="10" cols="85" placeholder='What did you think? (optional)')
              button(type="submit") Add Review
