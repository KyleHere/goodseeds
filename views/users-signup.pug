extends layout.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  container.form-container
    form(action='/users/signup' method='post' class='form')
      div.form-inputs
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('First Name:', 'firstName', user.firstName)
        +field('Last Name:', 'lastName', user.lastName)
        +field('Username:', 'username', user.username)
        +field('Email Address:', 'email', user.email)
        +field('Password:', 'password', user.password, 'password')
        +field('Confirm Password:', 'confirmPassword', '', 'password')
        //- +field('Profile Image:', 'imgUrl', '', 'imgUrl')
        label(for='imgUrl' class='form-labels') Profile Image
        input(type='file' id='imgUrl' name='imgUrl' value='imgUrl' class='form-control')
      div.form-links
        button(type='submit' class='button-primary') Sign Up
      div.form-links
        a(href="/users/login" class='clickable-link') Already a member? Log in
