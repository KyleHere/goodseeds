extends layout.pug

include utils.pug

block content
    h1
    container.plant-container
        each plant in plants
            div.plant-card
                div.plant-image
                    img(src=plant.imgUrl, alt="Picture goes here")
                div
                    a(class="plant-name main-link" href=`/plants/${plant.id}`)= plant.name
                div
                    p(class="plant-scientific-name")= plant.scientificName

























